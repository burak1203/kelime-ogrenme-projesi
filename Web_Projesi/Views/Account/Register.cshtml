@model Web_Projesi.Models.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-white shadow-lg">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="KullaniciAdi" class="form-label"></label>
                                    <input asp-for="KullaniciAdi"
                                        class="form-control form-control-lg bg-dark text-white" />
                                    <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="Email" class="form-label">E-posta Adresi</label>
                                    <input asp-for="Email" class="form-control form-control-lg bg-dark text-white" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="Password" class="form-label">Şifre</label>
                                    <input asp-for="Password" class="form-control form-control-lg bg-dark text-white" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="TCKimlik" class="form-label">TC Kimlik No</label>
                                    <input asp-for="TCKimlik" class="form-control form-control-lg bg-dark text-white" />
                                    <span asp-validation-for="TCKimlik" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Ad" class="form-label">Ad</label>
                                    <input asp-for="Ad" class="form-control form-control-lg bg-dark text-white" />
                                    <span asp-validation-for="Ad" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="Soyad" class="form-label">Soyad</label>
                                    <input asp-for="Soyad" class="form-control form-control-lg bg-dark text-white" />
                                    <span asp-validation-for="Soyad" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <label asp-for="DogumTarihi" class="form-label">Doğum Tarihi</label>
                                    <input asp-for="DogumTarihi" class="form-control form-control-lg bg-dark text-white"
                                        type="date" />
                                    <span asp-validation-for="DogumTarihi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg px-5">Kayıt Ol</button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="mb-0">Zaten hesabınız var mı? <a asp-action="Login" class="text-success">Giriş Yap</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}