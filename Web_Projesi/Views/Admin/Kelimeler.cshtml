@model List<Web_Projesi.Models.KelimeYonetimViewModel>

@{
    ViewData["Title"] = "Kelime Yönetimi";
}

<div class="container mt-4 text-white">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Kelime Yönetimi</h2>
        <div>
            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary me-2">Geri</a>
            <a href="@Url.Action("KelimeEkle")" class="btn btn-primary">Yeni Kelime Ekle</a>
        </div>
    </div>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kelime</th>
                <th>Tanım</th>
                <th>Tür</th>
                <th>Örnek Cümle</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kelime in Model)
            {
                <tr>
                    <td>@kelime.KelimeID</td>
                    <td>@kelime.KelimeAdi</td>
                    <td>@kelime.Tanim</td>
                    <td>@kelime.Tur</td>
                    <td>@kelime.OrnekCumle</td>
                    <td>
                        <a href="@Url.Action("KelimeDuzenle", new { id = kelime.KelimeID })"
                            class="btn btn-warning btn-sm">Düzenle</a>
                        <form asp-action="KelimeSil" asp-route-id="@kelime.KelimeID" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Bu kelimeyi silmek istediğinizden emin misiniz?')">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>